@page
@model Sahty.Web.Pages.IndexModel
@{
    ViewData["Title"] = "Sahty Care - Plateforme Médicale";
}

@if (User?.Identity?.IsAuthenticated ?? false)
{
    <!-- Vue connectée - Dark mode -->
    <div class="container-fluid py-5 px-4">
        <div class="row">
            <div class="col-12">
                <div class="d-flex flex-column flex-lg-row align-items-start align-items-lg-center justify-content-between gap-3 mb-5">
                    <div>
                        <div class="gradient-badge mb-3">
                            <i class="fas fa-user-check me-2"></i>
                            Espace personnel
                        </div>
                        <h1 class="mb-2">Bienvenue sur votre espace santé</h1>
                        <p class="text-muted mb-0">Gérez vos patients, rendez-vous et ordonnances en toute simplicité</p>
                    </div>
                    <a asp-page="/Dashboard" class="btn btn-primary px-4 py-3">
                        <i class="fas fa-tachometer-alt me-2"></i>
                        Tableau de bord
                    </a>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="row g-4 mb-5">
            <div class="col-md-6 col-xl-3">
                <a asp-page="/Patients/Index" class="card-modern h-100 text-decoration-none hover-lift">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-primary bg-opacity-20 p-3 rounded-3 me-3">
                                <i class="fas fa-user-injured text-primary"></i>
                            </div>
                            <div>
                                <h5 class="mb-0">Patients</h5>
                                <small class="text-muted">Gérer les dossiers</small>
                            </div>
                        </div>
                        <p class="text-muted small mb-0">
                            Consultez et gérez tous les dossiers patients de votre établissement
                        </p>
                    </div>
                </a>
            </div>

            <div class="col-md-6 col-xl-3">
                <a asp-page="/Appointments/Index" class="card-modern h-100 text-decoration-none hover-lift">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-success bg-opacity-20 p-3 rounded-3 me-3">
                                <i class="fas fa-calendar-check text-success"></i>
                            </div>
                            <div>
                                <h5 class="mb-0">Rendez-vous</h5>
                                <small class="text-muted">Voir le planning</small>
                            </div>
                        </div>
                        <p class="text-muted small mb-0">
                            Planifiez et suivez les consultations de votre journée
                        </p>
                    </div>
                </a>
            </div>

            <div class="col-md-6 col-xl-3">
                <a asp-page="/Prescriptions/Index" class="card-modern h-100 text-decoration-none hover-lift">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-warning bg-opacity-20 p-3 rounded-3 me-3">
                                <i class="fas fa-file-prescription text-warning"></i>
                            </div>
                            <div>
                                <h5 class="mb-0">Ordonnances</h5>
                                <small class="text-muted">Éditer et suivre</small>
                            </div>
                        </div>
                        <p class="text-muted small mb-0">
                            Créez et gérez les prescriptions médicales électroniques
                        </p>
                    </div>
                </a>
            </div>

            <div class="col-md-6 col-xl-3">
                <a asp-page="/Account/Profile" class="card-modern h-100 text-decoration-none hover-lift">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-info bg-opacity-20 p-3 rounded-3 me-3">
                                <i class="fas fa-user-cog text-info"></i>
                            </div>
                            <div>
                                <h5 class="mb-0">Mon profil</h5>
                                <small class="text-muted">Paramètres</small>
                            </div>
                        </div>
                        <p class="text-muted small mb-0">
                            Gérez vos informations personnelles et préférences
                        </p>
                    </div>
                </a>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="row">
            <div class="col-12">
                <div class="card-modern">
                    <div class="card-header border-bottom">
                        <h5 class="mb-0">Activité récente</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-modern table-hover">
                                <thead>
                                    <tr>
                                        <th class="text-muted">Date</th>
                                        <th class="text-muted">Type</th>
                                        <th class="text-muted">Description</th>
                                        <th class="text-muted">Statut</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Aujourd'hui, 10:30</td>
                                        <td>
                                            <i class="fas fa-calendar me-2 text-success"></i>
                                            Rendez-vous
                                        </td>
                                        <td>Consultation Dr. Martin</td>
                                        <td>
                                            <span class="soft-badge success">Confirmé</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Hier, 15:45</td>
                                        <td>
                                            <i class="fas fa-file-prescription me-2 text-warning"></i>
                                            Ordonnance
                                        </td>
                                        <td>Nouvelle prescription créée</td>
                                        <td>
                                            <span class="soft-badge">En attente</span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <!-- Landing Page - Dark mode -->
    <!-- Hero Section -->
            <div class="container py-5 px-4">
                <div class="row align-items-center min-vh-80 py-5">
                    <div class="col-lg-6 mb-5 mb-lg-0">
                        <div class="gradient-badge mb-4">
                            <i class="fas fa-shield-alt me-2"></i>
                            Plateforme médicale sécurisée
                        </div>
                        <h1 class="display-4 fw-bold text-light mb-4">
                            Gestion médicale
                            <span class="text-gradient">modernisée</span>
                        </h1>
                        <p class="lead text-muted mb-5">
                            Solution complète pour les professionnels de santé. 
                            Gérez patients, rendez-vous et prescriptions dans un environnement sécurisé et intuitif.
                        </p>
                        
                        <div class="d-flex flex-column flex-sm-row gap-3 mb-5">
                            <a asp-page="/Account/Register" class="btn btn-primary btn-lg px-4 py-3">
                                <i class="fas fa-rocket me-2"></i>
                                Démarrer gratuitement
                            </a>
                            <a asp-page="/Account/Login" class="btn btn-outline-light btn-lg px-4 py-3">
                                <i class="fas fa-sign-in-alt me-2"></i>
                                Accès professionnel
                            </a>
                        </div>

                       
                    </div>
                    
                    <div class="col-lg-6">
                        <div class="hero p-4 p-md-5">
                            <div class="row g-4 mb-4">
                                <div class="col-4">
                                    <div class="text-center">
                                        <div class="h2 fw-bold text-light mb-2">24/7</div>
                                        <div class="small text-muted">Disponibilité</div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="text-center">
                                        <div class="h2 fw-bold text-light mb-2">SSL</div>
                                        <div class="small text-muted">Sécurisé</div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="text-center">
                                        <div class="h2 fw-bold text-light mb-2">RGPD</div>
                                        <div class="small text-muted">Conforme</div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Mini Dashboard Preview -->
                            <div class="bg-dark rounded-3 p-3 mb-4">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="bg-primary rounded-circle me-3" style="width: 40px; height: 40px;"></div>
                                    <div>
                                        <div class="placeholder-line bg-light" style="width: 120px; height: 12px;"></div>
                                        <div class="placeholder-line bg-light mt-1" style="width: 80px; height: 8px;"></div>
                                    </div>
                                </div>
                                <div class="row g-2 mb-3">
                                    <div class="col-6">
                                        <div class="bg-light bg-opacity-10 rounded-2 p-2">
                                            <div class="placeholder-line bg-light" style="width: 60%; height: 10px;"></div>
                                            <div class="placeholder-line bg-light mt-1" style="width: 90%; height: 20px;"></div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="bg-light bg-opacity-10 rounded-2 p-2">
                                            <div class="placeholder-line bg-light" style="width: 60%; height: 10px;"></div>
                                            <div class="placeholder-line bg-light mt-1" style="width: 90%; height: 20px;"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="placeholder-line bg-light" style="width: 100%; height: 80px; border-radius: 8px;"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

           

            <!-- Fonctionnalités Section -->
            <div class="container py-5 px-4">
                <div class="row">
                    <div class="col-lg-5 mb-5 mb-lg-0">
                        <div class="pill mb-3">
                            <i class="fas fa-check-circle"></i>
                           Bienvenue
                        </div>
                        <h2 class="text-light mb-4">
                            Tout ce dont vous avez besoin
                        </h2>
                        <p class="text-muted mb-4">
                        complète, sécurisée et conforme aux exigences médicales, 
                            
                        </p>
                    </div>
                    
                    <div class="col-lg-7">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="card-modern h-100">
                                    <div class="card-body p-4">
                                        <div class="d-flex align-items-start mb-3">
                                            <div class="bg-primary bg-opacity-20 p-3 rounded-3 me-3">
                                                <i class="fas fa-calendar-check text-primary"></i>
                                            </div>
                                            <div>
                                                <h5 class="text-light mb-2">Gestion des RDV</h5>
                                                <p class="text-muted small mb-0">
                                                    Planning intelligent avec rappels automatiques et gestion des annulations
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="card-modern h-100">
                                    <div class="card-body p-4">
                                        <div class="d-flex align-items-start mb-3">
                                            <div class="bg-success bg-opacity-20 p-3 rounded-3 me-3">
                                                <i class="fas fa-file-prescription text-success"></i>
                                            </div>
                                            <div>
                                                <h5 class="text-light mb-2">Ordonnances numériques</h5>
                                                <p class="text-muted small mb-0">
                                                    Création, signature et transmission sécurisée des prescriptions
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="card-modern h-100">
                                    <div class="card-body p-4">
                                        <div class="d-flex align-items-start mb-3">
                                            <div class="bg-warning bg-opacity-20 p-3 rounded-3 me-3">
                                                <i class="fas fa-chart-line text-warning"></i>
                                            </div>
                                            <div>
                                                <h5 class="text-light mb-2">Tableaux de bord</h5>
                                                <p class="text-muted small mb-0">
                                                    Statistiques et indicateurs en temps réel pour votre pratique
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="card-modern h-100">
                                    <div class="card-body p-4">
                                        <div class="d-flex align-items-start mb-3">
                                            <div class="bg-info bg-opacity-20 p-3 rounded-3 me-3">
                                                <i class="fas fa-mobile-alt text-info"></i>
                                            </div>
                                            <div>
                                                <h5 class="text-light mb-2">Mobile First</h5>
                                                <p class="text-muted small mb-0">
                                                    Interface optimisée pour tous les appareils, disponible partout
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- CTA Final -->
            <div class="container py-5 px-4">
                <div class="card-modern border-primary">
                    <div class="card-body p-5 text-center">
                        <h2 class="text-light mb-3">Prêt à moderniser votre pratique ?</h2>
                        <p class="text-muted mb-4">Rejoignez notre communauté de professionnels de santé</p>
                        
                        <div class="d-flex flex-column flex-sm-row justify-content-center gap-3">
                            <a asp-page="/Account/Register" class="btn btn-primary btn-lg px-4">
                                <i class="fas fa-rocket me-2"></i>
                                Commencer maintenant
                            </a>
                            <a asp-page="/Account/Login" class="btn btn-outline-light btn-lg px-4">
                                <i class="fas fa-sign-in-alt me-2"></i>
                                Se connecter
                            </a>
                        </div>
                    </div>
                </div>
            </div>
}

