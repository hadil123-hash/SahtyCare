@page
@model Sahty.Web.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Créer un compte";
}

<div class="auth-hero">
    <div class="container-xxl">
    <div class="auth-card">
        <div>
            <div class="auth-brand mb-3">
                <div class="logo">S</div>
                <div>
                    <div class="fw-bold">Sahty Care</div>
                    <div class="small text-muted">Centre médical digital</div>
                </div>
            </div>
            <div class="pill mb-3">Nouveau</div>
            <h1 class="h4 mb-1">Créer un compte</h1>
            <p class="text-muted mb-4">Rejoins Sahty pour des RDV et prescriptions fluides, avec l’UI cohérente du site.</p>

            @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
            {
                <div class="alert alert-danger">@Model.ErrorMessage</div>
            }

            <form method="post" class="vstack gap-3">
                <div>
                    <label class="form-label">Nom complet</label>
                    <input class="form-control form-control-lg" asp-for="Input.FullName" placeholder="Ton nom complet" />
                </div>

                <div>
                    <label class="form-label">Email</label>
                    <input class="form-control form-control-lg" asp-for="Input.Email" placeholder="ex: patient@mail.com" />
                    <span class="text-danger small" asp-validation-for="Input.Email"></span>
                </div>

                <div>
                    <label class="form-label">Mot de passe</label>
                    <input class="form-control form-control-lg" asp-for="Input.Password" type="password" placeholder="********" />
                    <span class="text-danger small" asp-validation-for="Input.Password"></span>
                </div>

                <button class="btn btn-primary btn-lg w-100" type="submit">Créer le compte</button>

                <div class="small text-muted text-center">
                    Déjà un compte ? <a asp-page="/Account/Login">Connexion</a>
                </div>
            </form>
        </div>
        <div class="auth-aside">
            <div class="gradient-badge mb-2">Sahty Care</div>
            <div class="h5 mb-2">Une  plateforme santé</div>
            <ul class="small text-muted mb-0">
                <li>RDV et ordonnances synchronisés</li>
            </ul>
        </div>
    </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
