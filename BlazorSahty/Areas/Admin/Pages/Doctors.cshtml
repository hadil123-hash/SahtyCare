@page
@model Sahty.Web.Areas.Admin.Pages.DoctorsModel
@{
    ViewData["Title"] = "Admin - Medecins";
    var openUpdate = Model.ShowUpdateForm ? "true" : null;
}

@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
{
    <div class="alert alert-warning">@Model.ErrorMessage</div>
}

@if (Model.IsLoading)
{
    <div class="alert alert-light d-flex align-items-center gap-2">
        <div class="spinner-border spinner-border-sm" role="status"></div>
        <div>Chargement...</div>
    </div>
}

<div class="row g-3">
    <div class="col-12 col-lg-5">
        <div class="card-modern p-4">
            <div class="d-flex align-items-center justify-content-between mb-2">
                <h2 class="h5 mb-0">Actions</h2>
                <span class="pill">Admin</span>
            </div>
            <div class="text-muted small">Utilisez "Modifier" dans la liste pour mettre a jour.</div>
        </div>
    </div>

    <div class="col-12 col-lg-7">
        <div class="card-modern p-4">
            <div class="d-flex align-items-center justify-content-between mb-2">
                <h2 class="h5 mb-0">Medecins</h2>
                <span class="badge text-bg-light border">@Model.Items.Count</span>
            </div>

            @if (Model.Items.Count == 0 && string.IsNullOrWhiteSpace(Model.ErrorMessage))
            {
                <div class="text-muted">Aucun medecin trouve.</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nom</th>
                                <th>Specialite</th>
                                <th>Email</th>
                                <th style="width:180px;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var d in Model.Items)
                        {
                            <tr>
                                <td>@d.Id</td>
                                <td>@d.FullName</td>
                                <td>@d.Speciality</td>
                                <td>@d.Email</td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <a class="btn btn-sm btn-outline-primary" asp-page="./Doctors" asp-route-form="edit" asp-route-id="@d.Id">Modifier</a>
                                        <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Supprimer ce medecin ?');">
                                            <input type="hidden" name="id" value="@d.Id" />
                                            <button class="btn btn-sm btn-outline-danger" type="submit">Supprimer</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<div class="modal fade" id="edit-doctor-modal" tabindex="-1" aria-labelledby="editDoctorLabel" aria-hidden="true" data-modal-open="@openUpdate">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editDoctorLabel">Mettre a jour</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <div class="modal-body">
                @if (!string.IsNullOrWhiteSpace(Model.UpdateError))
                {
                    <div class="alert alert-danger">@Model.UpdateError</div>
                }
                <div asp-validation-summary="All" class="text-danger small"></div>

                <form method="post" asp-page-handler="Update" class="vstack gap-3">
                    <input type="hidden" asp-for="Update.Id" />
                    <div>
                        <label class="form-label">Id</label>
                        <input class="form-control" value="@Model.Update.Id" readonly />
                    </div>
                    <div>
                        <label class="form-label">Nom complet</label>
                        <input class="form-control" asp-for="Update.FullName" />
                    </div>
                    <div>
                        <label class="form-label">Specialite</label>
                        <input class="form-control" asp-for="Update.Speciality" />
                    </div>
                    <div>
                        <label class="form-label">Email</label>
                        <input class="form-control" asp-for="Update.Email" />
                    </div>
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-outline-primary" type="submit">Enregistrer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
