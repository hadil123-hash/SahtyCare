@page
@model Sahty.Web.Areas.Doctor.Pages.PrescriptionsModel
@{
    ViewData["Title"] = "Doctor - Ordonnances";
    var openCreate = Model.ShowCreateForm ? "true" : null;
}

@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
{
    <div class="alert alert-warning">@Model.ErrorMessage</div>
}

@if (Model.IsLoading)
{
    <div class="alert alert-light d-flex align-items-center gap-2">
        <div class="spinner-border spinner-border-sm" role="status"></div>
        <div>Chargement...</div>
    </div>
}

<div class="row g-3">
    <div class="col-12 col-lg-5">
        <div class="card-modern p-4">
            <div class="d-flex align-items-center justify-content-between mb-2">
                <h2 class="h5 mb-0">Actions</h2>
                <span class="pill">Medecin</span>
            </div>
            <div class="d-flex flex-wrap gap-2">
                <button class="btn btn-sm btn-primary" type="button" data-bs-toggle="modal" data-bs-target="#create-prescription-modal">Ajouter une ordonnance</button>
            </div>
            <div class="text-muted small mt-2">Creez une nouvelle ordonnance pour un patient.</div>
        </div>
    </div>

    <div class="col-12 col-lg-7">
        <div class="card-modern p-4">
            <div class="d-flex align-items-center justify-content-between mb-2">
                <h2 class="h5 mb-0">Mes ordonnances</h2>
                <div class="d-flex align-items-center gap-2">
                    <button class="btn btn-sm btn-outline-primary" type="button" data-bs-toggle="modal" data-bs-target="#create-prescription-modal">Ajouter</button>
                    <span class="pill chip-muted">@Model.Items.Count</span>
                </div>
            </div>

            @if (Model.Items.Count == 0 && string.IsNullOrWhiteSpace(Model.ErrorMessage))
            {
                <div class="text-muted">Aucune ordonnance trouvee.</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table align-middle table-modern">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Patient</th>
                                <th>Pharmacien</th>
                                <th>Medicament</th>
                                <th>Dosage</th>
                                <th>Statut</th>
                                <th>Notes</th>
                                <th style="width:120px;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var p in Model.Items)
                        {
                            var status = (p.Status ?? "").ToLowerInvariant();
                            <tr>
                                <td>@p.DateIssued.ToString("yyyy-MM-dd")</td>
                                <td class="text-muted">@(!string.IsNullOrWhiteSpace(p.PatientName) ? p.PatientName : p.PatientId.ToString())</td>
                                <td class="text-muted">@(!string.IsNullOrWhiteSpace(p.PharmacistName) ? p.PharmacistName : p.PharmacistId.ToString())</td>
                                <td class="text-muted">@(!string.IsNullOrWhiteSpace(p.MedicationName) ? p.MedicationName : p.MedicationId.ToString())</td>
                                <td class="text-muted">@p.Dosage</td>
                                <td>
                                    <span class="soft-badge @(status == "accepted" ? "success" : status == "refused" ? "warning" : "")">@p.Status</span>
                                </td>
                                <td class="text-muted">@p.Notes</td>
                                <td>
                                    <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Supprimer cette ordonnance ?');">
                                        <input type="hidden" name="id" value="@p.Id" />
                                        <button class="btn btn-sm btn-outline-danger" type="submit">Supprimer</button>
                                    </form>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<div class="modal fade" id="create-prescription-modal" tabindex="-1" aria-labelledby="createPrescriptionLabel" aria-hidden="true" data-modal-open="@openCreate">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createPrescriptionLabel">Creer une ordonnance</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <div class="modal-body">
                @if (!string.IsNullOrWhiteSpace(Model.CreateError))
                {
                    <div class="alert alert-danger">@Model.CreateError</div>
                }

                <form method="post" asp-page-handler="Create" class="vstack gap-3">
                    <input type="hidden" asp-for="Create.DoctorId" />
                    <div>
                        <label class="form-label">Patient</label>
                        <select class="form-select" asp-for="Create.PatientId" asp-items="Model.Patients">
                            <option value="">Selectionner un patient</option>
                        </select>
                    </div>
                    <div>
                        <label class="form-label">Pharmacien</label>
                        <select class="form-select" asp-for="Create.PharmacistId" asp-items="Model.Pharmacists">
                            <option value="">Selectionner un pharmacien</option>
                        </select>
                    </div>
                    <div>
                        <label class="form-label">Medicament</label>
                        <select class="form-select" asp-for="Create.MedicationId" asp-items="Model.Medications">
                            <option value="">Selectionner un medicament</option>
                        </select>
                    </div>
                    <div>
                        <label class="form-label">Date d'emission</label>
                        <input class="form-control" asp-for="Create.DateIssued" type="date" />
                    </div>
                    <div>
                        <label class="form-label">Dosage</label>
                        <input class="form-control" asp-for="Create.Dosage" />
                    </div>
                    <div>
                        <label class="form-label">Notes</label>
                        <textarea class="form-control" asp-for="Create.Notes" rows="3"></textarea>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-primary" type="submit">Creer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
