@page
@model Sahty.Web.Areas.Client.Pages.AppointmentsModel
@{
    ViewData["Title"] = "Client - Mes rendez-vous";
    var openCreate = Model.ShowCreateForm ? "true" : null;
    var openUpdate = Model.ShowUpdateForm ? "true" : null;
}

@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
{
    <div class="alert alert-warning">@Model.ErrorMessage</div>
}

@if (Model.IsLoading)
{
    <div class="alert alert-light d-flex align-items-center gap-2">
        <div class="spinner-border spinner-border-sm" role="status"></div>
        <div>Chargement...</div>
    </div>
}

<div class="row g-3">
    <div class="col-12 col-lg-5">
        <div class="card-modern p-4">
            <div class="d-flex align-items-center justify-content-between mb-2">
                <h2 class="h5 mb-0">Actions</h2>
                <span class="pill">Patient</span>
            </div>
            <div class="d-flex flex-wrap gap-2">
                <button class="btn btn-sm btn-primary" type="button" data-bs-toggle="modal" data-bs-target="#create-appointment-modal">Demander un RDV</button>
            </div>
            <div class="text-muted small mt-2">Le medecin confirmera la demande. Modifications possibles pour les RDV en attente.</div>
        </div>
    </div>

    <div class="col-12 col-lg-7">
        <div class="card-modern p-4">
            <div class="d-flex align-items-center justify-content-between mb-2">
                <div>
                    <h2 class="h5 mb-0">Historique</h2>
                    <div class="text-muted small">Vos derniers rendez-vous</div>
                </div>
                <div class="d-flex align-items-center gap-2">
                    <button class="btn btn-sm btn-outline-primary" type="button" data-bs-toggle="modal" data-bs-target="#create-appointment-modal">Ajouter</button>
                    <span class="pill chip-muted">@Model.Items.Count</span>
                </div>
            </div>

            @if (Model.Items.Count == 0 && string.IsNullOrWhiteSpace(Model.ErrorMessage))
            {
                <div class="text-muted">Aucun rendez-vous trouve.</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table align-middle table-modern">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Statut</th>
                                <th>Medecin</th>
                                <th>Patient</th>
                                <th style="width:200px;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var a in Model.Items)
                        {
                            <tr>
                                <td>@a.Date.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    <span class="soft-badge">@a.Status</span>
                                </td>
                                <td class="text-muted">@(!string.IsNullOrWhiteSpace(a.DoctorName) ? a.DoctorName : a.DoctorId.ToString())</td>
                                <td class="text-muted">@(!string.IsNullOrWhiteSpace(a.PatientName) ? a.PatientName : a.PatientId.ToString())</td>
                                <td>
                                    @if (string.Equals(a.Status, "Requested", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <div class="d-flex gap-2">
                                            <a class="btn btn-sm btn-outline-primary" asp-page="./Appointments" asp-route-form="edit" asp-route-id="@a.Id">Modifier</a>
                                            <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Supprimer ce RDV ?');">
                                                <input type="hidden" name="id" value="@a.Id" />
                                                <button class="btn btn-sm btn-outline-danger" type="submit">Supprimer</button>
                                            </form>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">Indisponible</span>
                                    }
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<div class="modal fade" id="create-appointment-modal" tabindex="-1" aria-labelledby="createAppointmentLabel" aria-hidden="true" data-modal-open="@openCreate">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createAppointmentLabel">Demander un RDV</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <div class="modal-body">
                @if (!string.IsNullOrWhiteSpace(Model.CreateError))
                {
                    <div class="alert alert-danger">@Model.CreateError</div>
                }
                <div asp-validation-summary="All" class="text-danger small"></div>

                <form method="post" asp-page-handler="Create" class="vstack gap-3">
                    <div>
                        <label class="form-label">Medecin</label>
                        <select class="form-select" asp-for="Create.DoctorId" asp-items="Model.Doctors">
                            <option value="">Selectionner un medecin</option>
                        </select>
                    </div>
                    <div>
                        <label class="form-label">Date &amp; heure</label>
                        <input class="form-control" asp-for="Create.Date" type="datetime-local" />
                    </div>
                    <div>
                        <label class="form-label">Notes</label>
                        <textarea class="form-control" asp-for="Create.Notes" rows="3"></textarea>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="small text-muted">Statut initial: Requested.</div>
                        <button class="btn btn-primary" type="submit">Envoyer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="edit-appointment-modal" tabindex="-1" aria-labelledby="editAppointmentLabel" aria-hidden="true" data-modal-open="@openUpdate">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editAppointmentLabel">Modifier un RDV</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <div class="modal-body">
                @if (!string.IsNullOrWhiteSpace(Model.UpdateError))
                {
                    <div class="alert alert-danger">@Model.UpdateError</div>
                }
                <div asp-validation-summary="All" class="text-danger small"></div>

                <form method="post" asp-page-handler="Update" class="vstack gap-3">
                    <input type="hidden" asp-for="Update.Id" />
                    <div>
                        <label class="form-label">Medecin</label>
                        <select class="form-select" asp-for="Update.DoctorId" asp-items="Model.Doctors">
                            <option value="">Selectionner un medecin</option>
                        </select>
                    </div>
                    <div>
                        <label class="form-label">Date &amp; heure</label>
                        <input class="form-control" asp-for="Update.Date" type="datetime-local" />
                    </div>
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-outline-primary" type="submit">Enregistrer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
