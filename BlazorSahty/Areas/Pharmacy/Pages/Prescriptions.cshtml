@page
@model Sahty.Web.Areas.Pharmacy.Pages.PrescriptionsModel
@{
    ViewData["Title"] = "Pharmacy - Ordonnances";
    var openUpdate = Model.ShowUpdateForm ? "true" : null;
}

@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
{
    <div class="alert alert-warning">@Model.ErrorMessage</div>
}

@if (Model.IsLoading)
{
    <div class="alert alert-light d-flex align-items-center gap-2">
        <div class="spinner-border spinner-border-sm" role="status"></div>
        <div>Chargement...</div>
    </div>
}

<div class="row g-3">
    <div class="col-12 col-lg-5">
        <div class="card-modern p-4">
            <div class="d-flex align-items-center justify-content-between mb-2">
                <h2 class="h5 mb-0">Actions</h2>
                <span class="pill">Pharmacie</span>
            </div>
            <div class="text-muted small">Cliquez sur "Modifier" pour ajuster l'ordonnance ou "Accepter" pour valider.</div>
        </div>
    </div>

    <div class="col-12 col-lg-7">
        <div class="card-modern p-4">
            <div class="d-flex align-items-center justify-content-between mb-2">
                <h2 class="h5 mb-0">Ordonnances</h2>
                <span class="pill chip-muted">@Model.Items.Count</span>
            </div>

            @if (Model.Items.Count == 0 && string.IsNullOrWhiteSpace(Model.ErrorMessage))
            {
                <div class="text-muted">Aucune ordonnance trouvee.</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table align-middle table-modern">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Patient</th>
                                <th>Medecin</th>
                                <th>Medicament</th>
                                <th>Statut</th>
                                <th>Dosage</th>
                                <th>Notes</th>
                                <th style="width:220px;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var p in Model.Items)
                        {
                            var status = (p.Status ?? "").ToLowerInvariant();
                            var isAccepted = status == "accepted";
                            <tr>
                                <td>@p.DateIssued.ToString("yyyy-MM-dd")</td>
                                <td class="text-muted">@(!string.IsNullOrWhiteSpace(p.PatientName) ? p.PatientName : p.PatientId.ToString())</td>
                                <td class="text-muted">@(!string.IsNullOrWhiteSpace(p.DoctorName) ? p.DoctorName : p.DoctorId.ToString())</td>
                                <td class="text-muted">@(!string.IsNullOrWhiteSpace(p.MedicationName) ? p.MedicationName : p.MedicationId.ToString())</td>
                                <td>
                                    <span class="soft-badge @(status == "accepted" ? "success" : status == "refused" ? "warning" : "")">@p.Status</span>
                                </td>
                                <td class="text-muted">@p.Dosage</td>
                                <td class="text-muted">@p.Notes</td>
                                <td>
                                    <div class="d-flex gap-2 flex-wrap">
                                        <form method="post" asp-page-handler="Edit">
                                            <input type="hidden" name="id" value="@p.Id" />
                                            <button class="btn btn-sm btn-outline-primary" type="submit">Modifier</button>
                                        </form>
                                        <form method="post" asp-page-handler="Accept">
                                            <input type="hidden" name="id" value="@p.Id" />
                                            <button class="btn btn-sm btn-outline-success" type="submit" disabled="@isAccepted">Accepter</button>
                                        </form>
                                        <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Supprimer cette ordonnance ?');">
                                            <input type="hidden" name="id" value="@p.Id" />
                                            <button class="btn btn-sm btn-outline-danger" type="submit">Supprimer</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<div class="modal fade" id="edit-prescription-modal" tabindex="-1" aria-labelledby="editPrescriptionLabel" aria-hidden="true" data-modal-open="@openUpdate">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editPrescriptionLabel">Mettre a jour l'ordonnance</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <div class="modal-body">
                @if (!string.IsNullOrWhiteSpace(Model.UpdateError))
                {
                    <div class="alert alert-danger">@Model.UpdateError</div>
                }

                <form method="post" asp-page-handler="Update" class="vstack gap-3">
                    <input type="hidden" asp-for="Update.Id" />
                    <input type="hidden" asp-for="Update.DoctorId" />
                    <input type="hidden" asp-for="Update.PatientId" />
                    <input type="hidden" asp-for="Update.PharmacistId" />
                    <input type="hidden" asp-for="Update.Status" />

                    <div>
                        <label class="form-label">Ordonnance</label>
                        <input class="form-control" value="@(Model.Update.Id == 0 ? "Selectionner une ordonnance" : $"Ordonnance #{Model.Update.Id}")" readonly />
                    </div>
                    <div>
                        <label class="form-label">Patient</label>
                        <input class="form-control" value="@(Model.SelectedPatientLabel ?? "Selectionner une ordonnance")" readonly />
                    </div>
                    <div>
                        <label class="form-label">Medecin</label>
                        <input class="form-control" value="@(Model.SelectedDoctorLabel ?? "Selectionner une ordonnance")" readonly />
                    </div>
                    <div>
                        <label class="form-label">Medicament</label>
                        <select class="form-select" asp-for="Update.MedicationId" asp-items="Model.Medications">
                            <option value="">Selectionner un medicament</option>
                        </select>
                    </div>
                    <div>
                        <label class="form-label">Date d'emission</label>
                        <input class="form-control" asp-for="Update.DateIssued" type="date" />
                    </div>
                    <div>
                        <label class="form-label">Dosage</label>
                        <input class="form-control" asp-for="Update.Dosage" />
                    </div>
                    <div>
                        <label class="form-label">Notes</label>
                        <textarea class="form-control" asp-for="Update.Notes" rows="3"></textarea>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-primary" type="submit">Enregistrer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
